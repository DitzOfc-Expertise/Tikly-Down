<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_back"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="right"
        app:icon="@drawable/arrow_back"
        app:iconGravity="start"
        app:iconSize="30dp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimageview1"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_creator"
            app:civ_border_color="#424242"
            app:civ_border_overlay="true"
            app:civ_border_width="3dp"
            app:civ_circle_background_color="#FFFFFF" />

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="8dp" >

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="About Me"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Hi! I&apos;m a beginner programmer, I&apos;m often called DitzOfc, But is not my realy name haha. Btw, I will continue to update this application, Follow my GitHub to get more info, Click the GitHub image below!"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="8dp" >

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical"
                    android:padding="0dp">
					<ImageView
						android:id="@+id/imageview2"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:src="@drawable/github"
						android:scaleType="fitXY" />
				</LinearLayout>
                <LinearLayout
                    android:id="@+id/linear9"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical"
                    android:padding="0dp">
					<ImageView
						android:id="@+id/imageview3"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:src="@drawable/youtube"
						android:scaleType="fitXY" />
				 </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear10"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical"
                    android:padding="0dp">
					<ImageView
						android:id="@+id/imageview4"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:src="@drawable/tiktok"
						android:scaleType="fitXY" />
				</LinearLayout>
            </LinearLayout>
        </LinearLayout>
     </LinearLayout>
</LinearLayout>